[Unit]
Description=Raspberry Pi Phone System - IFB/PL
After=network.target sound.target systemd-user-sessions.service
After=local-fs.target

[Service]
Type=simple
User=procomm
Group=procomm
SupplementaryGroups=input video tty
WorkingDirectory=/home/procomm/ProComm
TTYPath=/dev/tty1
StandardInput=tty
StandardOutput=append:/home/procomm/ProComm/logs/systemd.log
StandardError=append:/home/procomm/ProComm/logs/systemd.log
Environment="QT_QPA_PLATFORM=eglfs"
Environment="QT_QPA_EGLFS_PHYSICAL_WIDTH=217"
Environment="QT_QPA_EGLFS_PHYSICAL_HEIGHT=136"
Environment="QT_QPA_FONTDIR=/usr/share/fonts"
Environment="QT_LOGGING_RULES=qt.qpa.input*=true"
ExecStart=/usr/bin/python3 /home/procomm/ProComm/main.py
Restart=always
RestartSec=5
StandardOutput=append:/home/procomm/ProComm/logs/systemd.log
StandardError=append:/home/procomm/ProComm/logs/systemd.log

# Resource limits
LimitRTPRIO=95
LimitMEMLOCK=infinity
Nice=-10

# Ensure framebuffer access
SupplementaryGroups=video audio

[Install]
WantedBy=multi-user.target
